body
	margin 0
	padding 0
	background-color #f7f7f7
	color black
	line-height 1.3
	width 390px
	user-select none

	&.windows
		font-family "Segoe UI", "Trebuchet MS", Tahoma, Verdana, sans-serif

	&.osx
		font-family "Lucida Grande", Helvetica, sans-serif

	&.linux
		font-family Ubuntu, "Droid Sans", sans-serif

textarea
	overflow hidden

a
	color #556188
	text-decoration none
	cursor pointer

	&:hover
		text-decoration underline

	&:focus
		outline none

ol, ul
	list-style none
	padding 0
	margin 0

h1
	font-size 12pt

h2
	font-size 10pt

#content
	display flex
	flex-direction column

.page
	padding .5em
